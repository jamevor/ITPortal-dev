  <style>
    .sky{
      background: linear-gradient(to bottom, #7f7fd5, #86a8e7, #91eae4);
      height:500px;
      border-bottom:4em solid var(--color-bright-2)
    }
    .cake svg {
        display: block;
        margin-bottom: -1em;
    }
    .cake::before {
      content: '\f6df';
      font-family: "Font Awesome 5 Pro";
      width: 1em;
      font-weight: 900;
      height: 1em;
      line-height: 1;
      font-size: 2em;
      color: orange;
      display: block;
      text-align: center;
      margin: 0 auto -.3em auto;
      animation: shake 10s;
      animation-iteration-count: infinite;
      transition: all .5s ease;
      opacity:1;
      z-index: 1;
    }
    .confettiWrapper{
      position: relative;
    }
    [class|="confetti"] {
      position: absolute;
      z-index: 0;
    }

    .red {
      background-color: var(--color-bright-4);
    }

    .yellow {
      background-color:  var(--color-bright-3);
    }

    .blue {
      background-color:  var(--color-bright-5);
    }
    @keyframes shake {
      0% { transform: translate(1px, 1px) rotate(0deg);opacity:1; }
      10% { transform: translate(-1px, -2px) rotate(-1deg);opacity:.8; }
      20% { transform: translate(-1px, 0px) rotate(1deg);opacity:.7; }
      30% { transform: translate(1px, 1px) rotate(0deg);opacity:.5; }
      40% { transform: translate(1px, -1px) rotate(1deg);opacity:.8; }
      50% { transform: translate(-1px, 1px) rotate(-1deg);opacity:1; }
      60% { transform: translate(-1px, 1px) rotate(0deg);opacity:.9; }
      70% { transform: translate(1px, 1px) rotate(-1deg);opacity:.8; }
      80% { transform: translate(-1px, -1px) rotate(1deg);opacity:.7; }
      90% { transform: translate(1px, 1px) rotate(0deg);opacity:.9; }
      100% { transform: translate(1px, -1px) rotate(-1deg);opacity:1; }
    }
    .hub-greeting{
      text-align: center;
      padding: 1em;
      color: var(--color-pop);
    }
    .fact-card{
      background: var(--color-lane);
      color: var(--colo-body-text);
      display: flex;
      align-items: center;
      flex-direction: column;
      justify-content: center;
      border-radius: 3px;
      padding: 1em;
      margin: 1em;
      text-align: center;
    }
    .fact-card-icon{
      font-size:3em;
      color:var(--color-pop);
    }
    .fact-card-stat{
      font-size:2em;
      color:var(--color-body-text);
    }
    .fact-card-label{
      font-size:1em;
      color:var(--color-body-subtitle);
    }
    .feedback{
      background: var(--color-pop);
      color: var(--color-light);
      box-shadow: var(--shadow-standard-y);
      border-radius: 3px;
      padding: 1em;
      transition: all .5s ease;
      display: flex;
      text-align: center;
      align-items: center;
      justify-content: center;
      margin: 1em 10%;
    }
    .feedback:hover,.feedback:active,.feedback:focus{
      background:var(--color-pop-h);
      color:var(--color-lane);
      box-shadow: var(--shadow-standard-y-h);
    }
    .feedbox{
      background: var(--color-chrome);
      padding: 1em;
      box-shadow: var(--shadow-standard-y);
      border-radius: 3px;
    }
  </style>
</head>
