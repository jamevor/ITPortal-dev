<% if (locals.alert) { %>
<a href="/news/<%= alert.newsID %>">
  <div class="grid-container fluid swim-lane alert" style="<%= alert.type && alert.type.color ? 'background: #' + alert.type.color : '' %>" data-closable>
    <div class="grid-container">
      <div class="grid-x align-middle">
        <div class="cell hide-for-small-only medium-2 text-center"><i class="fas <%= alert.type && alert.type.icon ? alert.type.icon : 'fa-exclamation-triangle' %> fa-4x"></i></div>
        <div class="cell small-12 medium-10">
          <h2><%= alert.title %></h2>
          <p><%= alert.content %></p>
        </div>
      </div>

      <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
        <span aria-hidden="true"><i class='fas fa-times'></i></span>
      </button>
    </div>
  </div>
</a>
<% } %>