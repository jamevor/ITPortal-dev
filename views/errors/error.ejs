<!DOCTYPE html>
<html lang="en-US" dir="ltr">
<head>
  <%- include('../partials/header.ejs'); %>
  <style>
    .error-block {
      height: 70vh;
      overflow: hidden;
    }

    .error-block h1 {
      font-weight: 800;
      font-size: 6em;
      margin-top: 30vh;
      color: var(--color-chrome);
    }

    .error-block h2 {
      font-size: 3em;
      color: var(--color-chrome);
    }

    .error-block p {
      font-size: 2em;
      color: var(--color-chrome);
    }

    body {
      background: var(--color-pop);
    }

    .layered {
      z-index: 99;
    }

    .circle-ripple {
      background-color: rgba(255, 255, 255, .5);
      width: 5em;
      height: 5em;
      border-radius: 50%;
      animation: ripple 20s ease infinite;
      position: relative;
      left: 2em;
      top: 50vh;
      z-index: -2;
      display: flex;
      align-items: center;
    }

    .circle-ripple img {
      animation-duration: 5s;
      flex: 1;
    }

    @keyframes ripple {
      0% {
        box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.1), 0 0 0 25vw rgba(255, 255, 255, 0.1), 0 0 0 50vw rgba(255, 255, 255, 0.1), 0 0 0 75vw rgba(255, 255, 255, 0.1);
      }
      100% {
        box-shadow: 0 0 0 25em rgba(255, 255, 255, 0.1), 0 0 0 50vw rgba(255, 255, 255, 0.1), 0 0 0 75vw rgba(255, 255, 255, 0.1), 0 0 0 100vw rgba(255, 255, 255, 0);
      }
    }

    @media screen and (max-width: 39.9375em) {
      .error-block h1 {
        font-size: 4em;
        margin-top: 10vh;
      }
      .error-block p {
        font-size: 1.5em;
        color: var(--color-chrome);
      }
    }
  </style>
</head>
<%- include('../partials/layout/top.ejs'); %>
  <div class='circle-ripple'><img class="fa-spin" src="/img/ico-intro.svg"></div>

  <div class="grid-container fluid swim-lane error-block">
    <div class="grid-container">
      <h1>Error: <%= error.status %></h1>
      <h2><%= error.name %></h2>
      <p><%= error.message %></p>
    </div>
  </div>
<%- include('../partials/layout/bottom.ejs'); %>
</html>

